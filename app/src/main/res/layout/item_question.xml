<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/question_background"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="dsasdsdasdsasdaaaaaaaaaaaaaaaaaaaa"
            android:textSize="@dimen/question_title_textSize" />

        <TextView

            android:id="@+id/text_summary"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="dsadsaaadsaaaaaaaaaaaaaaaaaaaaaaaaaaadsasddsaddsadasdssasd"
            android:textColor="@color/text_dark" />

        <View style="@style/Line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="2dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_head"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:placeholderImage="@mipmap/ic_launcher"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/text_author"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="dsadsdadsasdsa" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-09-18 22:58:34"
                android:textColor="@color/text_dark" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>